{
  "$schema": "vscode://schemas/color-theme",
  "name": "3BX Colorful",
  "type": "dark",
  "author": "3BX Team",
  "semanticClass": "theme.dark.3bx.colorful",
  "semanticHighlighting": true,
  "include": "./base-dark.json",
  "tokenColors": [
    {
      "name": "Comments",
      "scope": "comment, comment.line.number-sign.3bx",
      "settings": {
        "foreground": "#6F75D1",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Strings",
      "scope": "string, string.quoted.double.3bx",
      "settings": {
        "foreground": "#FFFFFF"
      }
    },
    {
      "name": "Import paths",
      "scope": "string.unquoted.import-path.3bx",
      "settings": {
        "foreground": "#FFD700"
      }
    },
    {
      "name": "Escape characters",
      "scope": "constant.character.escape.3bx",
      "settings": {
        "foreground": "#FF6B6B"
      }
    },
    {
      "name": "Numbers",
      "scope": "constant.numeric, constant.numeric.integer.3bx, constant.numeric.float.3bx",
      "settings": {
        "foreground": "#B5CEA8"
      }
    },
    {
      "name": "Constants (UPPER_CASE)",
      "scope": "constant.other.3bx",
      "settings": {
        "foreground": "#4FC1FF",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Effect pattern type - orange (side effects)",
      "scope": "storage.type.effect.3bx",
      "settings": {
        "foreground": "#FF7300",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Expression pattern type - cyan (value-returning)",
      "scope": "storage.type.expression.3bx",
      "settings": {
        "foreground": "#00FFEA",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Section pattern type - green (block patterns)",
      "scope": "storage.type.section.3bx",
      "settings": {
        "foreground": "#08C221",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Condition pattern type - yellow",
      "scope": "storage.type.condition.3bx",
      "settings": {
        "foreground": "#FFFF55",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Legacy pattern keyword",
      "scope": "storage.type.pattern.3bx",
      "settings": {
        "foreground": "#FC3BDC",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Control flow keywords",
      "scope": "keyword.control.3bx",
      "settings": {
        "foreground": "#F371FF"
      }
    },
    {
      "name": "When/triggered/parsed keywords",
      "scope": "keyword.control.when.3bx, keyword.control.triggered.3bx, keyword.control.parsed.3bx",
      "settings": {
        "foreground": "#C586C0"
      }
    },
    {
      "name": "Get/Set block keywords",
      "scope": "keyword.control.get.3bx, keyword.control.set.3bx",
      "settings": {
        "foreground": "#569CD6"
      }
    },
    {
      "name": "Import keyword",
      "scope": "keyword.control.import.3bx",
      "settings": {
        "foreground": "#3C66C0",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Assignment keyword (set)",
      "scope": "keyword.operator.assignment.3bx",
      "settings": {
        "foreground": "#FF7300"
      }
    },
    {
      "name": "Pattern-related keywords",
      "scope": "keyword.other.pattern.3bx, keyword.other.syntax.3bx, keyword.other.priority.3bx",
      "settings": {
        "foreground": "#FC3BDC"
      }
    },
    {
      "name": "Boolean/logical operators",
      "scope": "keyword.operator.logical.3bx",
      "settings": {
        "foreground": "#569CD6"
      }
    },
    {
      "name": "Article keywords (the, a, an) - dimmed",
      "scope": "keyword.other.article.3bx",
      "settings": {
        "foreground": "#666666",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Pattern literal keywords in definitions",
      "scope": "keyword.other.pattern-literal.3bx",
      "settings": {
        "foreground": "#FFA600"
      }
    },
    {
      "name": "Arithmetic operators",
      "scope": "keyword.operator.arithmetic.3bx",
      "settings": {
        "foreground": "#D4D4D4"
      }
    },
    {
      "name": "Comparison operators",
      "scope": "keyword.operator.comparison.3bx, keyword.operator.pattern.3bx",
      "settings": {
        "foreground": "#D4D4D4"
      }
    },
    {
      "name": "Intrinsic function (@intrinsic)",
      "scope": "support.function.builtin.intrinsic.3bx",
      "settings": {
        "foreground": "#4EC9B0",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Intrinsic operation names",
      "scope": "support.constant.intrinsic-operation.3bx",
      "settings": {
        "foreground": "#4EC9B0"
      }
    },
    {
      "name": "Print builtin",
      "scope": "support.function.builtin.print.3bx",
      "settings": {
        "foreground": "#FF7300"
      }
    },
    {
      "name": "Pattern parameters",
      "scope": "variable.parameter.pattern.3bx",
      "settings": {
        "foreground": "#62DB99",
        "fontStyle": "bold italic"
      }
    },
    {
      "name": "Lazy expression parameters",
      "scope": "variable.parameter.lazy.3bx",
      "settings": {
        "foreground": "#62DB99",
        "fontStyle": "bold italic"
      }
    },
    {
      "name": "Regular variables",
      "scope": "variable.other.3bx",
      "settings": {
        "foreground": "#62DB99",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Private variables",
      "scope": "variable.other.private.3bx",
      "settings": {
        "foreground": "#7A9A7A",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Lazy expression braces",
      "scope": "punctuation.definition.lazy.begin.3bx, punctuation.definition.lazy.end.3bx",
      "settings": {
        "foreground": "#FFD700",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Lazy expression content",
      "scope": "meta.embedded.lazy.3bx",
      "settings": {
        "fontStyle": "italic"
      }
    },
    {
      "name": "Punctuation",
      "scope": "punctuation.definition.block.3bx, punctuation.definition.pattern.3bx, punctuation.separator.comma.3bx",
      "settings": {
        "foreground": "#D4D4D4"
      }
    },
    {
      "name": "Brackets",
      "scope": "punctuation.bracket.round.3bx, punctuation.bracket.square.3bx, punctuation.definition.arguments.begin.3bx, punctuation.definition.arguments.end.3bx",
      "settings": {
        "foreground": "#FFD700"
      }
    }
  ],
  "colors": {
    "editor.background": "#171717",
    "editor.foreground": "#5FB4C7"
  }
}
