{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "3BX",
  "scopeName": "source.3bx",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#lazy-expression" },
    { "include": "#intrinsics" },
    { "include": "#pattern-definition-header" },
    { "include": "#pattern-block-headers" },
    { "include": "#import-statement" },
    { "include": "#numbers" },
    { "include": "#control-keywords" },
    { "include": "#declaration-keywords" },
    { "include": "#operator-keywords" },
    { "include": "#article-keywords" },
    { "include": "#operators" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "name": "comment.line.number-sign.3bx",
      "match": "#.*$"
    },

    "strings": {
      "name": "string.quoted.double.3bx",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.3bx",
          "match": "\\\\."
        }
      ]
    },

    "lazy-expression": {
      "name": "meta.lazy-expression.3bx",
      "begin": "\\{",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.lazy.begin.3bx" }
      },
      "end": "\\}",
      "endCaptures": {
        "0": { "name": "punctuation.definition.lazy.end.3bx" }
      },
      "contentName": "meta.embedded.lazy.3bx",
      "patterns": [
        { "include": "#strings" },
        { "include": "#numbers" },
        { "include": "#control-keywords" },
        { "include": "#operator-keywords" },
        { "include": "#operators" },
        { "include": "#identifiers" }
      ]
    },

    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.3bx",
          "match": "\\b-?\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.3bx",
          "match": "\\b-?\\d+\\b"
        }
      ]
    },

    "intrinsics": {
      "name": "meta.intrinsic.3bx",
      "begin": "(@intrinsic)\\s*(\\()",
      "beginCaptures": {
        "1": { "name": "support.function.builtin.intrinsic.3bx" },
        "2": { "name": "punctuation.definition.arguments.begin.3bx" }
      },
      "end": "\\)",
      "endCaptures": {
        "0": { "name": "punctuation.definition.arguments.end.3bx" }
      },
      "patterns": [
        {
          "name": "support.constant.intrinsic-operation.3bx",
          "match": "\"(store|load|add|sub|mul|div|print|eq|ne|lt|le|gt|ge|mod|neg|call|return|branch|phi|alloca|gep|cast|and|or|xor|shl|shr|cmp_eq|cmp_lt|cmp_gt|cmp_lte|cmp_gte|cmp_neq|evaluate|execute)\""
        },
        { "include": "#strings" },
        { "include": "#numbers" },
        { "include": "#identifiers" },
        {
          "name": "punctuation.separator.comma.3bx",
          "match": ","
        }
      ]
    },

    "import-statement": {
      "name": "meta.import.3bx",
      "match": "^(import)\\s+(.+)$",
      "captures": {
        "1": { "name": "keyword.control.import.3bx" },
        "2": { "name": "string.unquoted.import-path.3bx" }
      }
    },

    "pattern-definition-header": {
      "patterns": [
        {
          "comment": "Effect pattern definition - side effect patterns",
          "name": "meta.pattern.effect.3bx",
          "begin": "^(effect)\\s+",
          "beginCaptures": {
            "1": { "name": "storage.type.effect.3bx" }
          },
          "end": "(:)\\s*$",
          "endCaptures": {
            "1": { "name": "punctuation.definition.pattern.3bx" }
          },
          "patterns": [
            { "include": "#pattern-syntax-content" }
          ]
        },
        {
          "comment": "Expression pattern definition - value-returning patterns",
          "name": "meta.pattern.expression.3bx",
          "begin": "^(expression)\\s+",
          "beginCaptures": {
            "1": { "name": "storage.type.expression.3bx" }
          },
          "end": "(:)\\s*$",
          "endCaptures": {
            "1": { "name": "punctuation.definition.pattern.3bx" }
          },
          "patterns": [
            { "include": "#pattern-syntax-content" }
          ]
        },
        {
          "comment": "Section pattern definition - block patterns",
          "name": "meta.pattern.section.3bx",
          "begin": "^(section)\\s+",
          "beginCaptures": {
            "1": { "name": "storage.type.section.3bx" }
          },
          "end": "(:)\\s*$",
          "endCaptures": {
            "1": { "name": "punctuation.definition.pattern.3bx" }
          },
          "patterns": [
            { "include": "#pattern-syntax-content" }
          ]
        },
        {
          "comment": "Condition pattern definition",
          "name": "meta.pattern.condition.3bx",
          "begin": "^(condition)\\s+",
          "beginCaptures": {
            "1": { "name": "storage.type.condition.3bx" }
          },
          "end": "(:)\\s*$",
          "endCaptures": {
            "1": { "name": "punctuation.definition.pattern.3bx" }
          },
          "patterns": [
            { "include": "#pattern-syntax-content" }
          ]
        },
        {
          "comment": "Legacy pattern definition",
          "name": "meta.pattern.legacy.3bx",
          "match": "^(pattern)\\s*(:)\\s*$",
          "captures": {
            "1": { "name": "storage.type.pattern.3bx" },
            "2": { "name": "punctuation.definition.pattern.3bx" }
          }
        }
      ]
    },

    "pattern-syntax-content": {
      "patterns": [
        {
          "comment": "Lazy expression placeholder in pattern syntax",
          "name": "meta.lazy-placeholder.3bx",
          "begin": "\\{",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.lazy.begin.3bx" }
          },
          "end": "\\}",
          "endCaptures": {
            "0": { "name": "punctuation.definition.lazy.end.3bx" }
          },
          "patterns": [
            {
              "name": "variable.parameter.lazy.3bx",
              "match": "[a-zA-Z_][a-zA-Z0-9_]*"
            }
          ]
        },
        {
          "comment": "Reserved words in pattern syntax become literals",
          "name": "keyword.other.pattern-literal.3bx",
          "match": "\\b(set|to|if|then|else|while|loop|function|return|is|the|a|an|and|or|not|from|with|by|at|of|for|in|on|as|into)\\b"
        },
        {
          "comment": "Operators in pattern syntax",
          "name": "keyword.operator.pattern.3bx",
          "match": "[+\\-*/]|==|!=|<=|>=|<|>"
        },
        {
          "comment": "Non-reserved words become parameters",
          "name": "variable.parameter.pattern.3bx",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },

    "pattern-block-headers": {
      "patterns": [
        {
          "comment": "Legacy syntax: line in pattern block",
          "name": "meta.pattern.syntax-line.3bx",
          "begin": "^(\\s+)(syntax)\\s*(:)\\s*",
          "beginCaptures": {
            "2": { "name": "keyword.other.syntax.3bx" },
            "3": { "name": "punctuation.definition.block.3bx" }
          },
          "end": "$",
          "patterns": [
            { "include": "#pattern-syntax-content" }
          ]
        },
        {
          "comment": "When triggered block header",
          "name": "meta.pattern.when-triggered.3bx",
          "match": "^(\\s+)(when)\\s+(triggered)\\s*(:)\\s*$",
          "captures": {
            "2": { "name": "keyword.control.when.3bx" },
            "3": { "name": "keyword.control.triggered.3bx" },
            "4": { "name": "punctuation.definition.block.3bx" }
          }
        },
        {
          "comment": "When parsed block header",
          "name": "meta.pattern.when-parsed.3bx",
          "match": "^(\\s+)(when)\\s+(parsed)\\s*(:)\\s*$",
          "captures": {
            "2": { "name": "keyword.control.when.3bx" },
            "3": { "name": "keyword.control.parsed.3bx" },
            "4": { "name": "punctuation.definition.block.3bx" }
          }
        },
        {
          "comment": "Get block header (for expressions)",
          "name": "meta.pattern.get-block.3bx",
          "match": "^(\\s+)(get)\\s*(:)\\s*$",
          "captures": {
            "2": { "name": "keyword.control.get.3bx" },
            "3": { "name": "punctuation.definition.block.3bx" }
          }
        },
        {
          "comment": "Set block header (for expressions with setters)",
          "name": "meta.pattern.set-block.3bx",
          "match": "^(\\s+)(set)\\s*(:)\\s*$",
          "captures": {
            "2": { "name": "keyword.control.set.3bx" },
            "3": { "name": "punctuation.definition.block.3bx" }
          }
        },
        {
          "comment": "Priority specification",
          "name": "meta.pattern.priority.3bx",
          "match": "^(\\s+)(priority)\\s*(:)\\s*(\\d+)\\s*$",
          "captures": {
            "2": { "name": "keyword.other.priority.3bx" },
            "3": { "name": "punctuation.definition.block.3bx" },
            "4": { "name": "constant.numeric.priority.3bx" }
          }
        }
      ]
    },

    "control-keywords": {
      "patterns": [
        {
          "comment": "Control flow keywords",
          "name": "keyword.control.3bx",
          "match": "\\b(if|then|else|while|loop|return|from|to)\\b"
        }
      ]
    },

    "declaration-keywords": {
      "patterns": [
        {
          "comment": "Variable assignment keyword",
          "name": "keyword.operator.assignment.3bx",
          "match": "\\b(set)\\b"
        },
        {
          "comment": "Print effect",
          "name": "support.function.builtin.print.3bx",
          "match": "\\b(print)\\b"
        },
        {
          "comment": "Pattern-related keywords (outside of definitions)",
          "name": "keyword.other.pattern.3bx",
          "match": "\\b(pattern|syntax|when|parsed|triggered|priority)\\b"
        }
      ]
    },

    "operator-keywords": {
      "patterns": [
        {
          "comment": "Boolean and comparison operators",
          "name": "keyword.operator.logical.3bx",
          "match": "\\b(is|and|or|not)\\b"
        }
      ]
    },

    "article-keywords": {
      "patterns": [
        {
          "comment": "Article words (natural language style)",
          "name": "keyword.other.article.3bx",
          "match": "\\b(the|a|an)\\b"
        }
      ]
    },

    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.3bx",
          "match": "[+\\-*/]"
        },
        {
          "name": "keyword.operator.comparison.3bx",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "punctuation.definition.block.3bx",
          "match": ":"
        },
        {
          "name": "punctuation.separator.comma.3bx",
          "match": ","
        },
        {
          "name": "punctuation.bracket.round.3bx",
          "match": "[()]"
        },
        {
          "name": "punctuation.bracket.square.3bx",
          "match": "[\\[\\]]"
        }
      ]
    },

    "identifiers": {
      "patterns": [
        {
          "comment": "Constants (UPPER_CASE identifiers)",
          "name": "constant.other.3bx",
          "match": "\\b[A-Z][A-Z0-9_]*\\b"
        },
        {
          "comment": "Private/internal variables (starting with underscore)",
          "name": "variable.other.private.3bx",
          "match": "\\b_[a-zA-Z0-9_]*\\b"
        },
        {
          "comment": "Regular identifiers",
          "name": "variable.other.3bx",
          "match": "\\b[a-zA-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
